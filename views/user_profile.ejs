<link rel="stylesheet" href="/css/user_profile.css">

<div class="content">

  <section>
    <% if (profile_user.avatar) { %>
    <img src="<%= profile_user.avatar %>" alt="<%= profile_user.name %>" class="profile-pic">
    <% } else {%>
    <i class="fas fa-user profile-pic"></i>
    <% } %>


    <div class="user-info">
      <p> <b>Name</b> : <%= profile_user.name %>
      </p>
      <br>
      <p><b>Email</b> : <%=profile_user.email %>
      </p>
    </div>
  </section>

  <hr>


  <!-- if the user is viewing their own profile page, they can edit their profile -->
  <% if (profile_user.id == user.id) { %>

  <h4>Update your Profile</h4>
  <form action="/users/update/<%= user.id %>" method="POST" enctype="multipart/form-data">
    <div class="row">
      <div class="col">
        <label for="name" class="form-label">Name</label>
        <input type="text" name="name" class="form-control" value="<%= profile_user.name %>" placeholder="Your Name" required>
      </div>
      <div class="col">
        <label for="email" class="form-label">Email</label>
        <input type="text" name="email" class="form-control" value="<%= profile_user.email %>" placeholder="Your Email ID" required>
      </div>
    </div>
    <br>
    <div class="input-group">
      <input type="file" class="form-control" id="inputGroupFile04" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="avatar" placeholder="Profile Picture">
      <input type="submit" value="Update" class="btn btn-outline-light" type="button" id="inputGroupFileAddon04">
    </div>
    <% } %>

</div>